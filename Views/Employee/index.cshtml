@model IEnumerable<EmployeeManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>List of all the employees</h1>

<form asp-action="Search" method="get">
    <input type="text" name="query" placeholder="Department name" />
    <input type="number" name="age" placeholder="Age" />
    <button type="submit" class="btn btn-info">Search</button>
</form>

<a asp-action="Create">Insert new employee</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Age</td>
                    <td>@employee.DepartmentID</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@employee.EmployeeID">Edit</a>
                        <form asp-action="Delete" asp-route-id="@employee.EmployeeID" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this Employee record?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>