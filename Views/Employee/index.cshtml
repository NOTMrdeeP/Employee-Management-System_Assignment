@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employee List</h2>

<form asp-action="Index" method="get" class="mb-3 row g-3">
    <div class="col-md-4">
        <input type="text" name="searchDept" class="form-control" placeholder="Search by Department" />
    </div>
    <div class="col-md-3">
        <input type="number" name="minAge" class="form-control" placeholder="Minimum Age" />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Register New Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Age</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@(e.FirstName + " " + e.LastName)</td>
                <td>@e.Age</td>
                <td>@e.Department?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@e.EmployeeID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@e.EmployeeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>”
